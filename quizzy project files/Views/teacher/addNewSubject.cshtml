@model Quizzy.Models.Buisness_Models.subject_model

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Subject- Quizzy</title>
    <link rel="stylesheet" href="~/css/login_page.css">
    <script type="text/javascript" src="~/js/login.js" defer></script>
</head>
<body>
    <div class="wrapper">
        <h1>Add Subject</h1>
        <p id="error-message"></p>
        <p>Please add the details of your subject</p>
        @if (TempData["Check"] != null)
        {
            <div style="color: #07fc03; font-size: 16px; text-align: center;">
                @TempData["Check"]
            </div>
        }
        @if (TempData["log"] != null)
        {
            <div style="color: red; font-size: 16px; text-align: center;">
                @TempData["log"]
            </div>
        }
        <form id="form" method="post">
            <div>
                <label for="email-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path d="M120-200q-24 0-42-18t-18-42v-440q0-24 18-42t42-18h720q24 0 42 18t18 42v440q0 24-18 42t-42 18H120Zm360-230L140-680v440h680v-440L480-430Zm0-70 360-220H120l360 220ZM140-680v-40 480-440Z" />
                    </svg>
                </label>
                <input type="text" id="email-input" placeholder="Subject Name" asp-for="name" >
            </div>

            <div>
                <label for="password-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z" /></svg>
                </label>
                <input type="text" id="password-input" placeholder="Subject Code (5 Characters)" asp-for="code" >
            </div>
            <button type="submit">Add Subject</button>
        </form>
    </div>
</body>
</html>