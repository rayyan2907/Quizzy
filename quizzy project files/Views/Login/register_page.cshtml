@model Quizzy.Models.Buisness_Models.Registraton_models

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup - Quizzy</title>
  <link rel="stylesheet" href="~/css/login_page.css">

  <script type="text/javascript" src="~/js/login.js" defer></script>
</head>
<body>
  <div class="wrapper">
    <h1>Signup</h1>
    <p id="error-message"></p>
        @if (TempData["ErrorMessage"] != null)
        {
            <div style="color: red; font-size: 16px; text-align: center;">
                @TempData["ErrorMessage"]
            </div>
        }


    <form id="form" method="post" >
      
      <div>
  <label for="email-input">
    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24" >
      <path d="M120-200q-24 0-42-18t-18-42v-440q0-24 18-42t42-18h720q24 0 42 18t18 42v440q0 24-18 42t-42 18H120Zm360-230L140-680v440h680v-440L480-430Zm0-70 360-220H120l360 220ZM140-680v-40 480-440Z"/>
    </svg>
  </label>
  <input type="email"  id="email-input" placeholder="Email" asp-for="email" >
</div>

      <div>
        <label for="password-input">
          <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z"/></svg>
        </label>
        <input type="password" id="password-input" placeholder="Password" asp-for="password">
      </div>
      <div>
        <label for="repeat-password-input">
          <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z"/></svg>
        </label>
        <input type="password"  id="repeat-password-input" placeholder="Repeat Password" asp-for="cnfrm_pwd" >
      </div>
            <div>
                <label for="role-select">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z" />
                    </svg>
                </label>
                <select asp-for="role" id="role-select" placeholder="Select your role" style="flex-grow: 1; height: 50px; font: inherit; border: 2px solid var(--input-color); border-left: none; border-radius: 0 10px 10px 0; background-color: var(--input-color); color: var(--text-color);">
                    <option value="" disabled selected>   Select role</option>
                    <option value="student">Student</option>
                    <option value="teacher">Teacher</option>
                  
                </select>
            </div>

      <button type="submit">Signup</button>
    </form>
    <p>Already have an Account? <a href="/login/index">login</a> </p>
  </div>
</body>
</html>