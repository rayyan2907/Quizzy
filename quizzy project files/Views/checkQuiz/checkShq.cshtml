<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Grade Short Question</title>
    <link rel="stylesheet" href="CheckSQ.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-graduation-cap"></i> Grade Short Question</h2>

        <div class="question-box">
            <label for="question">Question:</label>
            <div id="question" class="dynamic-question">Loading question...</div>
        </div>

        <div class="answer-box">
            <label for="answer">Student's Answer:</label>
            <div id="answer" class="dynamic-answer">Loading answer...</div>
        </div>

        <div class="grading-box">
            <label for="grade">Grade (0 to 2):</label>
            <select id="grade" class="grade-dropdown">
                <option value="0">0</option>
                <option value="0.5">0.5</option>
                <option value="1">1</option>
                <option value="1.5">1.5</option>
                <option value="2">2</option>
            </select>
        </div>

        <div class="button-group">
            <button onclick="submitGrade()" class="submit-btn"><i class="fas fa-paper-plane"></i> Submit Grade</button>
            <button onclick="nextQuestion()" class="nav-btn"><i class="fas fa-arrow-right"></i> Next Question</button>
        </div>
    </div>

    <script>
        // Sample data for student answers (in a real-world scenario, this would come dynamically from a database)
        const questions = [
            "Define encapsulation in Object-Oriented Programming.",
            "What is the difference between == and === in JavaScript?",
            "Explain normalization in databases.",
            "What is a foreign key in SQL?",
            "Describe the working of a stack data structure."
        ];

        const studentAnswers = [
            "Encapsulation is the concept of hiding the internal implementation details of an object and exposing only the necessary parts.",
            "The '==' checks for value equality, while '===' checks for both value and type equality.",
            "Normalization is the process of organizing data in a database to minimize redundancy and dependency.",
            "A foreign key is a field in a table that is a primary key in another table, establishing a relationship between the two.",
            "A stack is a linear data structure that follows the Last In, First Out (LIFO) principle."
        ];

        let currentIndex = 0;

        function showQuestion(index) {
            document.getElementById("question").textContent = questions[index];
            document.getElementById("answer").textContent = studentAnswers[index];
            document.getElementById("grade").value = "0"; // Reset the grade dropdown
        }

        function nextQuestion() {
            if (currentIndex < questions.length - 1) {
                currentIndex++;
                showQuestion(currentIndex);
            } else {
                alert("You've reached the last question.");
            }
        }

        function submitGrade() {
            const grade = document.getElementById("grade").value;
            if (grade === "") {
                alert("Please select a grade.");
                return;
            }
            alert(`Grade ${grade} submitted for question ${currentIndex + 1}`);
            // In real-world scenarios, you would send the grade to the server using AJAX or Fetch
            nextQuestion();
        }

        // Initialize
        window.onload = () => showQuestion(currentIndex);
    </script>
</body>
</html>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 700px;
    margin: 40px auto;
    background-color: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
    color: #333;
    margin-bottom: 30px;
}

label {
    font-weight: bold;
    display: block;
    margin-bottom: 8px;
    color: #444;
}

.dynamic-question,
.dynamic-answer {
    background-color: #f0f0f0;
    padding: 12px 15px;
    border-radius: 6px;
    font-size: 16px;
    color: #222;
    min-height: 60px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
}

.grade-dropdown {
    width: 100%;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 15px;
    margin-bottom: 20px;
}

.button-group {
    margin-top: 25px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
}

.nav-btn,
.submit-btn {
    background-color: #007bff;
    color: #fff;
    padding: 10px 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
}

.submit-btn {
    background-color: #28a745;
}

.nav-btn:hover {
    background-color: #0056b3;
}

.submit-btn:hover {
    background-color: #218838;
}

.nav-btn i,
.submit-btn i {
    margin-right: 6px;
}
