@{
    var student = ViewBag.stu as Quizzy.Models.Buisness_Models.Student;
    var sub = ViewBag.sub as Quizzy.Models.Buisness_Models.subject_model;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attempt Quiz - Quizzy</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/quizAttempt.css" />
    <link rel="stylesheet" href="~/css/studentMain.css" />

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <i class="fas fa-graduation-cap brand-icon"></i>
                <h2>Quizzy</h2>
            </div>
            <div class="navbar-menu">
                <div class="user-welcome">
                    <i class="fas fa-user-circle user-icon"></i>
                    <span>Welcome, @student.first_name @student.last_name</span>
                
        </div>
    </nav>

   

   

        <!-- TempData Messages -->
        @if (TempData["Check"] != null)
        {
            <div style="color: #07fc03; font-size: 16px; text-align: center;">
                @TempData["Check"]
            </div>
        }
        @if (TempData["log"] != null)
        {
            <div style="color: red; font-size: 16px; text-align: center;">
                @TempData["log"]
            </div>
        }

        <!-- Main Content -->
        <div class="container">
            <div class="dashboard-header">
                <h1 class="dashboard-title">Attempt Quiz</h1>
            </div>

            <!-- Student Details -->
            <div class="student-details">
                <div class="student-info">
                    <div class="info-item">
                        <div class="info-label">Student ID</div>
                        <div class="info-value">@student.addmission_year-@student.dept-@student.roll_num</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">First Name</div>
                        <div class="info-value">@student.first_name</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Last Name</div>
                        <div class="info-value">@student.last_name</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email</div>
                        <div class="info-value">@student.email</div>
                    </div>
                </div>
            </div>

            <!-- Quiz Options -->
            <div class="quiz-options">
                <!-- MCQ Quiz Card -->
                <div class="quiz-card-new">
                    <div class="quiz-card-header">
                        <div class="quiz-type">
                            <div class="quiz-icon">
                                <i class="fas fa-list-ul"></i>
                            </div>
                            <h3 class="quiz-title">Multiple Choice Questions</h3>
                        </div>
                    </div>
                    <div class="quiz-card-body">
                        <div class="quiz-stats">
                            <div class="stat-item">
                                <div class="stat-label">Questions</div>
                                <div class="stat-value">20</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Time Limit</div>
                                <div class="stat-value">30 mins</div>
                            </div>
                        </div>
                        <div class="quiz-desc">
                            Select the correct answer from multiple options. Each question has one correct answer.
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 40%"></div>
                            </div>
                            <div class="progress-text">
                                <span class="progress-label"><i class="fas fa-check-circle"></i> Progress</span>
                                <span class="progress-percent">40%</span>
                            </div>
                        </div>
                        <button class="btn btn-primary">
                            <i class="fas fa-play"></i>
                            <span>Attempt MCQ</span>
                        </button>
                    </div>
                </div>

                <!-- Short Answer Quiz Card -->
                <div class="quiz-card-new">
                    <div class="quiz-card-header">
                        <div class="quiz-type">
                            <div class="quiz-icon">
                                <i class="fas fa-pen"></i>
                            </div>
                            <h3 class="quiz-title">Short Answer Questions</h3>
                        </div>
                    </div>
                    <div class="quiz-card-body">
                        <div class="quiz-stats">
                            <div class="stat-item">
                                <div class="stat-label">Questions</div>
                                <div class="stat-value">10</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Time Limit</div>
                                <div class="stat-value">45 mins</div>
                            </div>
                        </div>
                        <div class="quiz-desc">
                            Write brief answers to the given questions. Be concise and to the point.
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 0%"></div>
                            </div>
                            <div class="progress-text">
                                <span class="progress-label"><i class="fas fa-clock"></i> Progress</span>
                                <span class="progress-percent">0%</span>
                            </div>
                        </div>
                        <button class="btn btn-primary">
                            <i class="fas fa-pen-to-square"></i>
                            <span>Attempt Short</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-bar">
                <button class="btn btn-primary-sub">
                    <span>Submit</span>
                    <i class="fas fa-chart-simple"></i>
                </button>
            </div>
        </div>
    </div>
</body>
</html>
