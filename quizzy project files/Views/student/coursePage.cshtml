            imagePlaceholders.forEach(placeholder => {
                if (placeholder.element) {
                    placeholder.element.outerHTML = placeholder.svg;
                }
            });

            // Sample data for stats - in a real application, this would come from your backend
            const statsData = [
                { selector: '.stat-value:nth-child(1)', value: 3 },
                { selector: '.stat-value:nth-child(2)', value: 12 },
                { selector: '.stat-value:nth-child(3)', value: 28 },
                { selector: '.stat-value:nth-child(4)', value: '83%' }
            ];

            // Refresh button functionality
            document.querySelector('.refresh-btn').addEventListener('click', function () {
                this.querySelector('i').classList.add('fa-spin');
                setTimeout(() => {
                    this.querySelector('i').classList.remove('fa-spin');
                }, 1000);
            });
        });
    </script>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <i class="fas fa-graduation-cap brand-icon"></i>
                <h2>Quizzy</h2>
            </div>
            <div class="navbar-menu">
                <div class="user-welcome">
                    <i class="fas fa-user-circle user-icon"></i>
                    <span>Welcome, @student.first_name @student.last_name </span>
                </div>
                <a href="/student/logOut" class="btn-logout"><i class="fas fa-sign-out-alt"></i> Log Out</a>
            </div>
        </div>
    </nav>

    <!-- Go Back Button -->
    <a href="/student/main" class="btn-go-back">
        <i class="fas fa-arrow-left"></i> Go Back
    </a>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h1>Student Dashboard</h1>
            <div class="student-badge">
                <i class="fas fa-id-card"></i>
                <span>Roll No: @student.addmission_year-@student.dept-@student.roll_num</span>
            </div>
        </div>

        <!-- TempData Messages -->
        @if (TempData["Check"] != null)
        {
            <div style="color: #07fc03; font-size: 16px; text-align: center;">
                @TempData["Check"]
            </div>
        }
        @if (TempData["log"] != null)
        {
            <div style="color: red; font-size: 16px; text-align: center;">
                @TempData["log"]
            </div>
        }

        <!-- Courses Container -->
        <div class="courses-container">
            <div class="section-header">
                <h2>@sub.code-@sub.name</h2>
            </div>
        </div>

        <!-- Options Container -->
        <div class="options-container">
            <div class="option-card">
                <div class="card-icon">
                    <img src="/api/placeholder/400/320" alt="Create Quiz" />
                    <i class="fas fa-plus-circle"></i>
                </div>
                <div class="card-content">
                    <h3>Attempt Quiz</h3>
                    <p>Attempt the quizzes assigned to you</p>
                    <a href="/quiz/showQuiz" class="btn-option">Attempt Now <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>

            <div class="option-card">
                <div class="card-icon">
                    <img src="/api/placeholder/400/320" alt="Review Quizzes" />
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <div class="card-content">
                    <h3>View Results</h3>
                    <p>See the result of your quizzes</p>
                    <a href="/result/showResults" class="btn-option">Check Now <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>

           

            <div class="option-card">
                <div class="card-icon">
                    <img src="/api/placeholder/400/320" alt="Student Management" />
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3>Attempted Quizzes</h3>
                    <p>View all the quizzes you have attempted yet</p>
                    <a href="/quiz/showAttempts" class="btn-option">See Now<i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div> <!-- End of Options Container -->
    </div> <!-- End of Content Wrapper -->
    <!-- Footer Section -->
    <div class="dashboard-footer">
        <p class="footer-message">Happy Learning, @student.first_name @student.last_name!</p>
        <p class="copyright">&copy; 2025 Quizzy. All rights reserved.</p>
    </div>
</body>

</html>