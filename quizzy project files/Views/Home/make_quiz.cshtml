        padding: 12px 24px;
        transition: all 0.3s;
    }

    .btn-primary {
        background-color: #6c5ce7;
        border: none;
        color: white;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-primary:hover {
            background-color: #5649c0;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
        }

    .btn-cancel {
        background-color: transparent;
        color: #6c5ce7;
        border: 1px solid #e6e8eb;
    }

        .btn-cancel:hover {
            background-color: #f8f9fd;
            border-color: #6c5ce7;
        }


</style>