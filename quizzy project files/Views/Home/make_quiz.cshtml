@model Quizzy.Models.Buisness_Models.Quiz_models

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="quiz-form-container">
                <div class="quiz-header">
                    <h1>Create Quiz</h1>
                    <div class="purple-line"></div>
                </div>

                <form asp-action="##" method="post">
                    <input type="hidden" asp-for="mcq_id" />

                    <!-- Question Card -->
                    <div class="question-card">
                        <div class="form-group" >
                            <input class="form-control question-input" type="text" placeholder="Question" asp-for="description" />
                        </div>

                        <div class="options-grid">
                            <div class="option-box">
                                <div class="option-circle">1</div>
                                <input class="form-control" type="text" placeholder="Option 1" asp-for="opt1" />
                            </div>

                            <div class="option-box">
                                <div class="option-circle">2</div>
                                <input class="form-control" type="text" placeholder="Option 2" asp-for="opt2" />
                            </div>

                            <div class="option-box">
                                <div class="option-circle">3</div>
                                <input class="form-control" type="text" placeholder="Option 3" asp-for="opt3" />
                            </div>

                            <div class="option-box">
                                <div class="option-circle">4</div>
                                <input class="form-control" type="text" placeholder="Option 4" asp-for="opt4" />
                            </div>
                        </div>

                        <div class="correct-answer-container">
                            <div class="correct-answer-label">
                                <div class="option-circle correct-circle"><i class="fas fa-check"></i></div>
                                <span>Correct Answer</span>
                            </div>
                            <div class="correct-answer-input">
                                <select asp-for="corr_opt"  style="flex-grow: 1; height: 50px; font: inherit; border: 2px solid var(--input-color); border-left: none; border-radius: 0 10px 10px 0; background-color: var(--input-color); color: var(--text-color);">
                                    <option value="" disabled selected>   Select Correct Option</option>
                                    <option value="model.opt1">A</option>
                                    <option value="model.opt2">B</option>
                                    <option value="model.opt3">C</option>
                                    <option value="model.opt4">D</option>

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="action-bar">
                        <button class="btn btn-cancel" asp-action="#">Cancel</button>
                        <button class="btn btn-primary" type="submit">
                            <span>Add Question</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    root{
        --accent-color: #8672FF;
        --base-color: white;
        --text-color: #2E2B41;
        --input-color: #F3F0FF;
    }
    body {
        background-color: #f9fafc;
        color: #2E2B41;
        font-family: 'Inter', 'Segoe UI', sans-serif;
        min-height: 100vh;
        padding: 40px 0;
    }

    .quiz-form-container {
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(108, 92, 231, 0.15);
        overflow: hidden;
        margin-top: 40px;
    }

    .quiz-header {
        background-color: #8672FF;
        padding: 28px 32px 16px;
    }

        .quiz-header h1 {
            color: #fff;
            font-weight: 600;
            font-size: 28px;
            margin: 0;
            letter-spacing: -0.5px;
        }

    .purple-line {
        height: 3px;
        background-color: rgba(255, 255, 255, 0.3);
        margin-top: 16px;
    }

    .question-card {
        padding: 32px;
    }

    .question-input {
        font-size: 18px;
        font-weight: 500;
        border: none;
        border-bottom: 2px solid #e6e8eb;
        border-radius: 0;
        padding: 10px 0;
        margin-bottom: 32px;
        transition: all 0.3s;
        width:90%;
    }

        .question-input:focus {
            border-bottom: 2px solid #6c5ce7;
